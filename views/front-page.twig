{% extends "_layout.twig" %}

{% from "@components/splash/macro.twig" import sbSplash %}

{% block main %}
	{%- if post %}
		{{ sbSplash({
		    image: {
		        src: post.thumbnail.src,
		        alt: 'A pony, probably.'
		    },
		    heading: post.title,
		    blurb: post.content
		}) }}
	{%- endif %}
	{%- if upcoming_meets | length > 0 %}
		<section>
			<h2>Upcoming meets</h2>
			{% include "partials/meet-list.twig" with { 'meets': upcoming_meets } %}
		</section>
	{%- endif %}
{% endblock %}