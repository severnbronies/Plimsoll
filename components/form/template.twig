{% set method = params.method ?: 'get' %}

<form
    data-module="sb-form"
    class="sb-form {%- if params.classes %} {{ params.classes }}{% endif %}"
    action="{{ params.action }}"
    method="{{ method }}"
    {%- if params.disableValidation %} novalidate{% endif %}
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {{ params.html }}
</form>
