<label
    class="sb-form-label {%- if params.classes %} {{ params.classes }}{% endif %}"
    for="{{ params.for }}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {{- params.html -}}
    {%- if not params.required %} <span class="sb-form-label__optional">(optional)</span>{%- endif %}
</label>
