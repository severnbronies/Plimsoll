{% from '@components/prose/macro.twig' import sbProse %}

<div
    data-module="sb-empty"
    class="sb-empty {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <div class="sb-empty__emoji">{{ params.emoji }}</div>
    <div class="sb-empty__body">
        {{ sbProse({
	        html: params.content
	    }) }}
    </div>
</div>
