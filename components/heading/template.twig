{% set hierarchy = ['jumbotron', 'title', 'subtitle', 'small-subtitle', 'byline', 'small'] %}
{% set hierarchyPos = params.hierarchy | default(1) %}
{% set element = params.element | default('h' ~ hierarchyPos) %}

<{{ element }}
    class="sb-heading
        sb-heading--{{ hierarchyPos }}
        {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {{ params.html }}
</{{ element }}>
