{% set direction = 'vertical' %}
{% if params.direction %}{% set direction = params.direction %}{% endif %}

<div
	data-module="sb-stack"
	class="sb-stack sb-stack--{{ direction }} {%- if params.classes %} {{ params.classes }}{% endif %}"
	{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
	{{ params.html }}
</div>
