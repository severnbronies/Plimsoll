<form 
	data-module="sb-search-form"
    class="sb-search-form {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}
    role="search"
    method="get"
    action="/">
	<label for="{{ id }}">
		Search
	</label>
	<input type="search" name="s" id="{{ id }}" value="{{ search_query }}">
	<button type="submit">Go</button>
</form>