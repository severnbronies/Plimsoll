{% set webfontUrl = '/css/webfonts.css' | path %}
<!DOCTYPE html>
<html lang="en" dir="ltr" class="sb-template no-js">
	<head>
		<meta charset="UTF-8">
		<script>var w = document.documentElement;w.classList.remove('no-js');w.classList.add('js');</script>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" media="all" href="{{ '/css/all.css' | path }}">
		<link rel="stylesheet" media="print" href="{{ webfontUrl }}" onload="this.media='all'">
		<noscript><link rel="stylesheet" media="all" href="{{ webfontUrl }}"></noscript>
		<title>Preview</title>
	</head>
	<body class="sb-template__body">
		{{ yield }}
		<script src="{{ '/js/all.js' | path }}"></script>
		<script>window.sb.initAll();</script>
	</body>
</html>
