<time
	data-module="sb-meet-date"
	class="sb-meet-date {%- if params.classes %} {{ params.classes }}{% endif %}"
	datetime="{{ params.startDate | date('c') }}"
	{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
	<span class="sb-meet-date__day">
		{{ params.startDate | date('l, j') }}<!--
		--><span class="sb-meet-date__day-ord">{{ params.startDate | date('S') }}</span>
	</span>
	<span class="sb-meet-date__month">
		{{ params.startDate | date('F Y') }}
	</span>
	{%- if params.showTime and params.endDate %}
		<span class="sb-meet-date__time">
			{{ params.startDate | date('g:ia') }}
			<span class="sb-meet-date__day-ord">to</span>
			{{ params.endDate | date('g:ia') }}
		</span>
	{%- endif %}
</time>