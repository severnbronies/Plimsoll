{% set lazyload = true %}
{%- if (params.image.lazyload == false) %}
	{% set lazyload = false %}
{%- endif %}

<figcaption
    class="sb-image {%- for v in params.variants %} sb-image--{{ v }}{% endfor %} {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    <img
        class="sb-image__image {%- if params.image.classes %} {{ params.image.classes }}{% endif %}"
        alt="{{ params.alt }}"
        src="{{ params.src }}"
        {%- if params.srcset %} srcset="{{ params.srcset }}"{% endif %}
        {%- if params.width %} width="{{ params.width }}"{% endif %}
        {%- if params.height %} height="{{ params.height }}"{% endif %}
        {%- if lazyload %} loading="lazy"{% endif %}
        {%- for attribute, value in params.image.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {%- if params.attribution %}
        <figcaption class="sb-image__attribution">
        	{%- if params.attribution.source %}
        		<a
        			class="sb-image__attribution-source"
        			href="{{ params.attribution.source }}"
        			rel="noopener noreferrer"
        			target="_blank">
        			{{- params.attribution.copyright -}}
        		</a>
        	{%- else %}
            	{{ params.attribution.copyright }}
        	{%- endif %}
        </figcaption>
    {%- endif %}
</figcaption>
