{% from "@components/map/macro.twig" import sbMap %}

{{ sbMap({
    id: 'map'
}) }}

<script>
	window.addEventListener('DOMContentLoaded', function() {
		var map = new window.sb.Map(document.getElementById('map'), function() {
			map.addLocation({
				name: 'Example location',
				address: 'Brandon Hill Park, Park Street, Bristol BS1 5RR',
				lat: 51.454029,
				lng: -2.606814
			});
			map.addLocation({
				name: 'Another example location',
				address: '5 Nelson Street, Bristol BS1 2JT',
				lat: 51.456540,
				lng: -2.594255
			});
		});
	});
</script>