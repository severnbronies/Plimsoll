{% from "@components/image/macro.twig" import sbImage %}

<div
    data-module="sb-gallery"
    class="sb-gallery {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {%- for item in params.images %}
    	<a class="sb-gallery__link" href="{{ item.href }}">
    		{% set imageAttributes = merge(item.image, { classes: 'sb-gallery__image', variants: ['cover'] }) %}
    		{{ sbImage(imageAttributes) }}
    	</a>
    {%- endfor %}
</div>
